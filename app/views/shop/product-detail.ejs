<body>
    <%- include('../includes/navigation.ejs')  %>
    <% if (typeof product !== 'undefined' && typeof product === 'object') { %>
        <main class="centered">
            <h1><%= lodash.capitalize(product.title) %></h1>
            <hr>
            <div>
                <img src="<%= product.imageUrl %>" alt="<%= lodash.capitalize(product.title) %>">
            </div>
            <h2><%= product.price %></h2>
            <p><%= lodash.capitalize(product.description) %></p>
            <%- include('../includes/shop/add_to_cart.ejs', {product: product})  %>
        </main>
    <% } else { %>
        <h1>No product details is available!</h1>
    <% } %>
        
    <%- include('../includes/end.ejs')  %> 