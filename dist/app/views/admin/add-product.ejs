<%- include('../includes/updated/head.ejs') %>
    <script type="text/javascript" src="/materialize/js/init.js" defer></script>
</head>
<body>
    <%- include('../includes/updated/header.ejs') %>
    <%- include('../includes/updated/toaster.ejs') %>
    <main>
        <div class="container">
            <%- uploader %>
            <form class="product-form cube-loader" action="/admin/add-product/" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrf %>">
                <div class="input-field col s12 m6">
                    <label for="title"><%= nav_title %></label>
                    <input type="text" name="title" id="title">
                </div>
                <div class="input-field col s12 m6">
                    <label for="price"><%= 'Price' %></label>
                    <input type="number" name="price" id="price" step="0.01">
                </div>
                <div class="input-field col s12 m6">
                    <label for="description"><%= 'Description' %></label>
                    <textarea class="materialize-textarea" name="description" id="description" rows="5"></textarea>
                </div>
                <button class="btn" type="submit">Add Product</button>
            </form>
        </div>
    </main>
    <%- include('../includes/updated/footer.ejs') %>
    <%- include('../includes/updated/script.ejs') %>
</body>
</html>