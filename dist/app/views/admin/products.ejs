<%- include('../includes/header.ejs')  %> 
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')  %> 
    <main>
        <% if(products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="grid">
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= lodash.capitalize(product.title) %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>" alt="<%= lodash.capitalize(product.title) %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= lodash.capitalize(product.description) %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-product/<%= product.id %>/" class="btn">Edit</a>
                            <form action="/admin/delete-product/" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrf %>">
                                <button type="submit" class="btn">Delete</button>
                                <input type="hidden" name="product_id" value="<%= product.id %>">
                            </form>
                        </div>
                    </article>
                </div>
            <%})%>
        <% } else { %>
            <h1>No Products Found!</h1>     
        <% } %>
    </main>

<%- include('../includes/end.ejs')  %>