{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Migration - create migration",
            "type": "shell",
            "command": "sh 000_create_migration.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/core/database/migrations/shell"
            },
            "problemMatcher": []
        },
        {
            "label": "Sass Compile",
            "type": "shell",
            "command": "npx sass --update -c --verbose app/public/sass:app/public/css --style=compressed",
            "group": "build"
        },
        {
            "label": "SASS force recompile",
            "type": "shell",
            "command": "rm -rf app/public/css; npx sass --update -c --verbose app/public/sass:app/public/css --style=compressed",
            "group": "build",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Read Migrations",
            "type": "shell",
            "command": "node core/database/migrations/execute_migrations/ExecuteSQL.js",
            "group": "build"
        },
        {
            "label": "Requests tester dev server",
            "type": "shell",
            "command": "node_modules/autocannon/autocannon.js  http://localhost:8010",
            "group": "build"
        },
        {
            "label": "Clean npm cache",
            "type": "shell",
            "command": "npm cache clean --force",
            "group": "build"
        },
        {
            "label": "PM2 List Apps",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 list",
            "group": "build"
        },
        {
            "label": "PM2 Cluster Max",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 start Server.js -i max --watch",
            "options": {
                "env": {
                    "EXECUTION_POINT": "PM2"
                }
            },
            "group": "build"
        },
        {
            "label": "PM2 cluster one process",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 start Server.js -i 1 --watch --wait-ready",
            "options": {
                "env": {
                    "EXECUTION_POINT": "PM2"
                }
            },
            "group": "build"
        },
        {
            "label": "PM2 delete all process",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 delete all",
            "group": "build"
        },
        {
            "label": "PM2 GUI",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 plus",
            "group": "build"
        },
        {
            "label": "PM2 describe",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 describe Server",
            "group": "build"
        },
        {
            "label": "PM2 monitor all",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 monit",
            "group": "build"
        },
        {
            "label": "PM2 logger",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 logs",
            "group": "build"
        },
        {
            "label": "PM2 stop all",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 stop all",
            "group": "build"
        },
        {
            "label": "PM2 restart all",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 restart all",
            "group": "build"
        },
        {
            "label": "PM2 reload all",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 reload all",
            "group": "build"
        },
        {
            "label": "PM2 update",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 updatePM2",
            "group": "build"
        },
        {
            "label": "PM2 ping",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 ping",
            "group": "build"
        },
        {
            "label": "Start dev server",
            "type": "shell",
            "command": "npm install && npm update && npm run start:inspect",
            "options": {
                "env": {
                    "EXECUTION_POINT": "NPM"
                }
            },
            "group": "build"
        },
        {
            "label": "Clear all logs",
            "type": "shell",
            "command": "node_modules/pm2/bin/pm2 flush",
            "group": "build"
        }
    ]
}
